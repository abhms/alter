{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["node", "express"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "setupTests.ts"],
  "exclude": ["node_modules"]
}
